generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  avatar    String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?  @db.ObjectId
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  email       String
  description String
  color       String
  date        DateTime
  members     User[]
}

enum TaskStatus {
  Backlog
  Ready
  Doing
  Review
  Blocked
  Done
}

model Task {
  id      String     @id @default(auto()) @map("_id") @db.ObjectId
  project String
  status  TaskStatus
  color   String
  title   String
  email   String
  avatar  String
  date    DateTime
}
